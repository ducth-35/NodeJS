<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body style="background-color: #FAFAFA;">
<div class="super_container">

    <!-- Header -->

    <header class="header">

    </header>
    <div class="container">
        <div class="login">
                <h1 class="text-center">Thêm Sản Phẩm</h1>
                <form action="/uploads" method="POST" enctype="multipart/form-data">
                    <div style="font-weight: bold" class="form-label-group">
                        <label>Tên sản phẩm</label>
                        <input class="form-control" name="tensanpham"/>
                    </div>

                    <div style="font-weight: bold" class="form-label-group">
                        <label>Giá bán</label>
                        <input class="form-control" name="price"/>
                    </div>

                    <div style="font-weight: bold" class="form-label-group">
                        <label>Màu sắc</label>
                        <input class="form-control" name="mausac"/>
                    </div>
                    <div style="font-weight: bold" class="form-label-group">
                        <label>Thể Loại</label>
                        <input class="form-control" name="theloai"/>
                    </div>

                    <div style="font-weight: bold" class="form-label-group">
                        <label for="description">Thông tin sản phẩm</label>
                        <textarea class="form-control" name="description"></textarea>
                    </div>
                    <div style="font-weight: bold">
                        <label>Thêm Ảnh Sản Phẩm</label>
                        <input type="file" name="image" style="width: 100%;"/>
                    </div>
                    <div class="modal-footer container-fluid">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Optional JavaScript -->
